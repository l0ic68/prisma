            </div>
        </div>

        <div id="Bloc_Temoin">
            <h2>Témoignages</h2>
            {% for client in clients |slice(0,3) %}
            <div id="Bloc_Temoin_Content">
                <div class="Bloc_Temoin_Case">
                    <p>{{ client.temoignage }}</p>
                    <hr class="Mobile_Overflow"/>
                    <div class="Bloc_Temoin_ID">
                        <img src="http://www.placehold.it/10x10" alt="#">
                        <div class="Bloc_Temoin_ID_Name">
                            <h3>{{ client.nom }} {{ client.prenom }}</h3>
                            <p>{{ client.entreprise }}</p>
